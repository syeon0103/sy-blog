{
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    },

  ],
  "compilerOptions": {
    // 다른 옵션들...
    "types": ["axios"],
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "outDir": "./dist", // 출력 디렉토리
    "declaration": true, // .d.ts 파일 생성
  },
  "include": ["src/**/*", "global.d.ts"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
